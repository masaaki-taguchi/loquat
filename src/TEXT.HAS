string_1a:
	st.b	bottom_page_flag(a6)	*$1aに当たったらフラグをあげる
	bra	display_text_exit
string_09:
	addq.b	#8,d7
	ble	1f
	cmpi.b	#8,d7
	bcs	1f
	subq.l	#1,a1
	bra	next_display_text
1:	and.b	d6,d7			*8の倍数の数字に
	lea.l	96(a2,d7.w),a0
	jmp	(a4)
string_0d:
	cmpi.b	#$0a,(a1)+
	beq	next_display_text
	subq.l	#1,a1
