	bra	next_display_text
2:	bsr	put_816
	jmp	(a4)
string_hankaku_2:
	addq.b	#1,d7
	ble	3f
	subq.l	#1,a1
	bra	next_display_text
3:	move.b	d1,-(sp)		*lsl.w #8,d1と同じ
	move.w	(sp)+,d1
	move.b	(a1)+,d1
	moveq.l	#8,d2
	IOCS	_FNTADR
	move.l	d0,a3
	bsr	put_816_trans		*2byte半角文字を書き出す
	jmp	(a4)
string_zenkaku:
	addq.b	#2,d7
	ble	4f
	subq.l	#1,a1
	bra	next_display_text
4:	move.b	d1,-(sp)
	move.w	(sp)+,d1
	move.b	(a1)+,d1
	bsr	put_1616
	jmp	(a4)
string_zenkaku_2:
	addq.b	#2,d7
	ble	5f
	subq.l	#1,a1
	bra	next_display_text
5:	move.b	d1,-(sp)
	move.w	(sp)+,d1
	move.b	(a1)+,d1
	subi.w	#$8140,d1
	lsl.w	#5,d1
	lea.l	font_1616_buffer(a6),a3
	adda.w	d1,a3
	bsr	put_1616_trans
